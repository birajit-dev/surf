        "keywords": "<%= newsUrl.post_keyword %>",
        "speakable": {
        "@type": "SpeakableSpecification",
        "cssSelector": "[<%= newsUrl.meta_description %>]"
        },
        "url": "https://northeastsurf.com/<%= newsUrl.post_category %>/<%= newsUrl.post_url %>"
