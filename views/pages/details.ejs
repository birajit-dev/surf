        <!--Poprup-->
        <link href="/css/css-popup.css" rel="stylesheet">
        <script src="/js/js-jquery.min.js"></script>       
        <script src="/js/js-jquery.bpopup.min.js"></script>
        <script>
        $( document ).ready(function() {
            $('#popup_this').bPopup();
        });
        </script>

        <link href='https://fonts.googleapis.com/css?family=Droid Serif' rel='stylesheet'>
        <%- include('alltags.ejs'); %> 

    </head>
    <body class="single">
        <div class="top-scroll-bar"></div>
       <%- include('header.ejs'); %>
            <main id="content">
                <div class="container">
                    <div class="entry-header">                        
                        <div class="mb-5">
                            <h1 class="entry-title m_b_2rem" style="font-family: Droid Serif;">
<%= newsUrl.post_name %></h1>
<p style="font-family: Droid Serif;color: #6b6b6b;margin-top: -20px;"><%- newsUrl.post_summary %></p>

                            <div class="entry-meta align-items-center">
                                <a class="author-avatar" href="#"><img src="https://media.northeastsurf.com/author-surf.png" alt=""></a>
                                <a href="#"><%= newsUrl.author %></a> in <a href="/">Surf&trade;</a><br>                                    
                                <span><%= newsUrl.update_date %></span>
                                <span class="middotDivider"></span>
                                <span class="readingTime" title="3 min read">3 min read</span>
                                <span class="svgIcon svgIcon--star">
                                    <svg class="svgIcon-use" width="15" height="15">
                                        <path d="M7.438 2.324c.034-.099.09-.099.123 0l1.2 3.53a.29.29 0 0 0 .26.19h3.884c.11 0 .127.049.038.111L9.8 8.327a.271.271 0 0 0-.099.291l1.2 3.53c.034.1-.011.131-.098.069l-3.142-2.18a.303.303 0 0 0-.32 0l-3.145 2.182c-.087.06-.132.03-.099-.068l1.2-3.53a.271.271 0 0 0-.098-.292L2.056 6.146c-.087-.06-.071-.112.038-.112h3.884a.29.29 0 0 0 .26-.19l1.2-3.52z"></path>
                                    </svg>
                                </span>

                                
                                
                            </div>
                            

                            
                        </div>
<!-- ShareThis BEGIN --><div class="sharethis-inline-share-buttons" style="margin-top: -35px; padding-bottom:10px"></div><!-- ShareThis END -->

                        <figure class="image zoom mb-5">
                            <img src="<%= newsUrl.post_image %>" alt="<%= newsUrl.post_name %>" style="justify-content: center;width: 100%;" />
                            
                        </figure>  <!--figure-->
                    </div> <!--end single header-->
                    
                    <article class="entry-wraper mb-5">
                        <div class="entry-left-col">
                            <div class="social-sticky">
                                <a href="#"><i class="icon-facebook"></i></a>
                                <a href="#"><i class="icon-twitter"></i></a>
                                <a href="#"><i class="icon-heart"></i></a>
                                <a href="#"><i class="icon-paper-plane"></i></a>
                            </div>
                        </div>
                       
                        <div class="entry-main-content dropcap">

                                <%- newsUrl.post_content; %>
                                <div class="sharethis-inline-reaction-buttons"></div>


                            <!--Begin Subcrible-->
                            <div class="border p-5 bg-lightblue mb-5">
                                <div class="row justify-content-between">
                                    <div class="col-md-5 mb-2 mb-md-0">
                                        <h5 class="font-weight-bold secondfont mb-3 mt-0">Become a member</h5>
                                        <p class="small-text">Get the latest news right in your inbox. We never spam!</p>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" placeholder="Enter your e-mail address">
                                            </div>
                                            <div class="col-md-12 mt-2">
                                                <button type="submit" class="btn btn-success btn-block">Subscribe</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--End Subcrible-->
                            
                        </div>
                        <div class="entry-bottom">
                            <div class="tags-wrap heading">
                                <span class="tags">
                                    <% //Loading the variable
                                    var mystr = newsUrl.meta_tags;
                                    
                                    //Splitting it with : as the separator
                                    var myarr = mystr.split(",");
                                    
                                    //Resulting array structure
                                    //myarr = ['0000000020C90037', 'TEMP', 'data'];
                                    for(var i = 0; i < myarr.length; i++) { %>
                                        <a href="#" rel="tag"><%= myarr[i] %></a>

                                      <% } %>
                                </span>
                            </div>
                        </div>
                        
                    </article> <!--entry-content-->
                    
                    <!--Begin post related-->
                    <div class="related-posts mb-5">
                        <h4 class="spanborder text-center">
                            <span>Related Posts</span>
                        </h4>
                        <div class="row justify-content-between">
                             <div class="divider-2"></div>   
                             
                             <% if( rNews != ''){
                                rNews.forEach(function(dnews, index){ %>
                            <article class="col-md-4">
                                <div class="mb-3 d-flex row">
                                    <figure class="col-md-5"><a href="<%- dnews.post_category %>/<%- dnews.post_url %>"><img src="<%- dnews.post_image %>" alt="<%- dnews.post_name %>"></a></figure>
                                    <div class="entry-content col-md-7 pl-md-0">                                    
                                        <h5 class="entry-title mb-3"><a href="/<%- dnews.post_category %>/<%- dnews.post_url %>"><%- dnews.post_name %></a></h5>
                                        <div class="entry-meta align-items-center">
                                            <a href="#"><%- dnews.author %></a> in <a href="#">Surf&trade;</a><br>                                    
                                            <span><%- dnews.update_date %></span>
                                            <span class="middotDivider"></span>
                                            <span class="readingTime" title="3 min read">6 min</span>
