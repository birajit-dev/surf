    <body class="single">
        <div class="top-scroll-bar"></div>
       <%- include('header.ejs'); %>
            <main id="content">
                <div class="container">
                    <div class="entry-header">                        
                        <div class="mb-5">
                            <h1 class="entry-title m_b_2rem" style="font-family: Droid Serif;">
<%= newsUrl.post_name %></h1>
<p style="font-family: Droid Serif;color: #6b6b6b;margin-top: -20px;"><%- newsUrl.post_summary %></p>
                            <div class="entry-meta align-items-center">
                                <a class="author-avatar" href="#"><img src="<%= newsUrl.post_image %>" alt=""></a>
                                <a href="#"><%= newsUrl.author %></a> in <a href="/">Surf&trade;</a><br>                                    
                                <span><%= newsUrl.update_date %></span>
                                <span class="middotDivider"></span>
                                <span class="readingTime" title="3 min read">3 min read</span>
                                <span class="svgIcon svgIcon--star">
                                    <svg class="svgIcon-use" width="15" height="15">
