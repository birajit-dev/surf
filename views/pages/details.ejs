        "url": "https://northeastsurf.com/<%= newsUrl.post_category %>/<%= newsUrl.post_url %>",
        "publisher":{
            "@type":"Northeast Surf",
            "name":"<%= newsUrl.author %>",
            "logo":"https://northeastsurf.com/logo.png"
        },
        "headline": "<%= newsUrl.post_name %>",
        "mainEntityOfPage": "https://northeastsurf.com/<%= newsUrl.post_category %>/<%= newsUrl.post_url %>",
        "articleBody": "<%= newsUrl.meta_description %>",
        "image":"<%= newsUrl.post_image %>",
        "datePublished":"<%= newsUrl.update_date %>"
        }
        </script>


        <!-- Bootstrap, Font Awesome, Aminate, Owl Carausel, Normalize CSS -->
        <link href="/css/css-bootstrap.css" rel="stylesheet">
        <link href="/css/css-owl.carousel.min.css" rel="stylesheet">
