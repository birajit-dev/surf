<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <title>Counter Update!</title>

    <script src="https://cdn.tiny.cloud/1/lku2o3ma1r45gsou8gld5ns35eaftpsevrx6jpr7czrc3424/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>


    <script>
        tinymce.init({
          selector: '#mytextarea',
          content_style:
    "@import url('https://fonts.googleapis.com/css?family=Droid Serif');body { font-family: Droid Serif; ",
          font_formats:"Droid: Droid Serif;",
          plugins: [
            'a11ychecker','advlist','advcode','advtable','autolink','checklist','export',
            'lists','link','image','charmap','preview','anchor','searchreplace','visualblocks',
            'powerpaste','fullscreen','formatpainter','insertdatetime','media','table','help','wordcount', 'code'
          ],
          toolbar: 'asechange blocks fontfamily fontsize | forecolor link bold italic alignleft aligncenter alignright alignjustify | ' +
            'bullist numlist checklist outdent indent | removeformat | table help |  '
        });
        </script>
  </head>
  <body>

    <%- include('fuckingheader.ejs'); %> 


    <div class="container-sm" style="padding-top: 10px;">
    <form method="post" action="/admin/user/teercounterupdate">
        <div class="row">

            <% if(cdT != ''){ %>

                <input type="hidden" name="id" id="id" value="<%= cdT._id %>">


            <div class="col-sm-8">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Update Date</span>
                    <input type="text" class="form-control" placeholder="News Title" aria-label="Recipient's username" aria-describedby="basic-addon2" name="counter_date" id="counter_date" value="<%= cdT.counter_date %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Shillong First Round</span>
                    <input type="text" class="form-control" placeholder="News Title" aria-label="Recipient's username" aria-describedby="basic-addon2" name="shillong_first" id="shillong_first" value="<%= cdT.shillong_first %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Shillong Second Round</span>
                    <input type="text" class="form-control" placeholder="News Title" aria-label="Recipient's username" aria-describedby="basic-addon2" name="shillong_second" id="shillong_second" value="<%= cdT.shillong_second %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Khanapara First Round</span>
                    <input type="text" class="form-control" placeholder="News Title" aria-label="Recipient's username" aria-describedby="basic-addon2" name="khanapara_first" id="khanapara_first" value="<%= cdT.khanapara_first %>" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Khanapara Second Round</span>
                    <input type="text" class="form-control" placeholder="News Title" aria-label="Recipient's username" aria-describedby="basic-addon2" name="khanapara_second" id="khanapara_second" value="<%= cdT.khanapara_second %>" required>
                </div>

               

                

            </div>


            <div class="col-sm-4">


                

                 


                <input type="Submit" name="Publish" class="btn btn-info" style="width: 100%;">



            </div>


        </div>
<% } %>
</form>

    </div>








    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


  </body>
</html>